{
  "name": "isbn-scanner",
  "version": "0.1.0",
  "homepage": "./",
  "private": true,
  "description": "ISBN scanner in the browser",
  "author": "@rimutaka, Pavel Maslov",
  "license": "MIT",
  "dependencies": {
    "@pathcheck/dcc-sdk": "^0.0.27",
    "buffer": "^6.0.3",
    "http-server": "^0.13.0",
    "process": "^0.11.10",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-app-rewired": "^2.2.1",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3",
    "react-scripts": "5.0.1",
    "react-usestateref": "^1.0.8",
    "stream-browserify": "^3.0.0",
    "upnqr": "1.1.0",
    "util": "^0.12.5"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "eslint-config-react-app": "^7.0.1"
  },
  "scripts": {
    "start": "HTTPS=true PORT=8080 HOST=0.0.0.0 react-app-rewired start",
    "build": "react-app-rewired build && npm run build-sw && npm run clean-cra-sw",
    "build-sw": "node ./src/sw-build.js",
    "clean-cra-sw": "rm -f build/precache-manifest.*.js && rm -f build/service-worker.js",
    "test": "react-app-rewired test",
    "eject": "react-app-rewired eject"
  },
  "overrides": {
    "react-refresh": "0.14.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rimutaka/koder.git"
  },
  "bugs": {
    "url": "https://github.com/rimutaka/koder/issues"
  }
}